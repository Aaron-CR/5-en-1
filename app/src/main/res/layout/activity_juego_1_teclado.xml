<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">

    <LinearLayout
        android:id="@+id/linear_background"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="#00A5BB"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/linear1_background"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/image_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimaryDark"
                android:onClick="backButton"
                android:src="@drawable/ic_back_button" />

            <TextView
                android:id="@+id/text_vidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Vidas"
                android:textAllCaps="true"
                android:textColor="#F0F0F0"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textAllCaps="true"
                android:textColor="#F0F0F0"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2_background"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoria"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_categoria_small"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginTop="15dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image_categoria_medium"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/image_categoria_normal"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3_background"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_puntaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Puntaje"
                android:textAllCaps="true"
                android:textColor="#F0F0F0"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/puntaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAllCaps="true"
                android:textColor="#F0F0F0"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layoutBotones"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <EditText
            android:id="@+id/edit_palabra_digitada_para_validar"
            android:layout_width="275dp"
            android:layout_height="60dp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="textCapCharacters"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDarker"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/botonHablar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/button_mic"
            android:src="@drawable/ic_mic" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_palabra_para_validar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/layoutEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32sp"
        android:text="Palabra"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="38sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layoutBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/teclado"
        android:layout_marginBottom="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/saltar_palabra"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/button_comodin_juego2"

            android:text="Saltar"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/arriesgar"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_comodin_juego2"
            android:text="Arriesgar"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/teclado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/teclado_fila_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="q" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="w" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="e" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="r" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="t" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="y" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="u" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="i" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="o" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="p" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/teclado_fila_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="a" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="s" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="d" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="f" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="g" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="h" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="j" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="k" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="l" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="Ã±" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/teclado_fila_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp">

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text=" "
                android:visibility="invisible" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="z" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="x" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="c" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="v" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="b" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="n" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text="m" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:layout_weight="0.65"
                android:text="del" />

            <Button
                style="@style/ButtonKeyboardStyle"
                android:text=" "
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>