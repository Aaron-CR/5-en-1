<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JugarActivity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="60dp">

        <Button
            android:id="@+id/button_juego_1"
            style="@style/Boton"
            android:text="@string/category_juego1"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/button_juego_2"
            style="@style/Boton"
            android:text="@string/category_juego2"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/button_juego_3"
            style="@style/Boton"
            android:text="@string/category_juego3"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/button_juego_4"
            style="@style/Boton"
            android:text="@string/category_juego4"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/button_juego_5"
            style="@style/Boton"
            android:text="@string/category_juego5"
            android:textColor="@android:color/black" />

    </LinearLayout>
</LinearLayout>
